<div class="pagination-centered">
	<%= will_paginate @episodes, :param_name => 'episodes_page',  renderer: FoundationPagination::Rails %> 
</div>
<ul class="small-block-grid-3 medium-block-grid-4 large-block-grid-5">
	<% @episodes.each do |episode| %>
	<li>
		<a href="<%= directory_show_episode_url(episode.id) %>">
			<%= image_tag episode.coverart.thumb_400 %>
		</a>
		<h5><%= episode.title %></h5>
	</li>
	<% end %>
</ul>
<div class="pagination-centered">
	<%= will_paginate @episodes, :param_name => 'episodes_page',  renderer: FoundationPagination::Rails %> 
</div>