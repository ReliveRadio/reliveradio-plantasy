<div class="row">
	<% if @playlist_entries.blank? %>
		<p>No episodes scheduled.</p>
	<% else %>
		<% @playlist_entries.each do |entry| %>
			<% if entry.is_episode? %>
				<div class="medium-3 columns">
					<%= image_tag entry.episode.coverart.thumb_400%>
					<div><%= entry.start_time %></div>
					<div><%= entry.end_time %></div>
					<div>Time left: <%= entry.time_left_human %></div>
				</div>
				<div class="medium-9 columns">

					<h3><%= entry.episode.title %></h3>
					<p><%= entry.episode.subtitle %></p>

				</div>
			<% end %>
		<% end %>
	<% end %>
</div>