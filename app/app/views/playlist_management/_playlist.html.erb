<% if @immutable_entries.blank? %>
	<div class="panel callout">	<p>No episodes scheduled. Select episodes on the right to add them to the playlist.</p></div>
<% else %>

	<table id="immutable-entries-table">
		<tbody>
			<% @immutable_entries.each do |entry| %>
				<%= content_tag_for :tr, entry do %>
					<%= render 'playlist_entry', entry: entry %>
				<% end %>
			<% end %>
		</tbody>
	</table>

	<table id="changeable-entries-table">
		<tbody id="playlist-entry-list"
			data-update-url="<%= sort_playlist_entries_url(offset: @offset, channel_playlist_id: @channel_playlist.id) %>"
			data-fetch-url="<%= update_playlist_entries_url(channel_playlist_id: @channel_playlist.id) %>">
				<% @changeable_entries.each do |entry| %>
					<%= content_tag_for :tr, entry do %>
						<%= render 'playlist_entry', entry: entry %>
					<% end %>
				<% end %>
		</tbody>
</table>
<% end %>