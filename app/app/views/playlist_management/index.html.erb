<div class="row">
	<div class="medium-12 columns">
		<h1>Playlist Management <small><%= @channel_playlist.name %></small></h1>
		<p><%= @channel_playlist.description %></p>
	</div>
</div>

<div class="row">
	<div class="medium-4 columns">
		<div id="playlist" class="panel" style="height: 600px; overflow-y: scroll">
			<%= render 'playlist' %>
		</div>
	</div>
	<div class="medium-8 columns">
        <ul class="small-block-grid-3 large-block-grid-3">
        <% @episodes.each do |episode| %>
          <li>
                <img src="<%= episode.icon_url %>">
                <h5><%= episode.title %></h5>
                <p><%= first_x_words(episode.subtitle) %></p>
                <% if episode.cached? %>
					<%= link_to 'Add', {controller: 'playlist_management', action: 'create_entry', remote: true, episode_id: episode.id, channel_playlist: @channel_playlist.id}, class: 'button small'%>
				<% else %>
					<%= link_to 'Download', {controller: 'episodes', action: 'download', id: episode.id}, class: 'button small success' %>
				<% end %>
          </li>
        <% end %>
        </ul>
	</div>
</div>