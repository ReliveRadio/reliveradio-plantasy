<div class="row">
	<div class="medium-12 columns">
		<h1>Playlist Management <small><%= @channel_playlist.name %></small></h1>
		<p><%= @channel_playlist.description %></p>
	</div>
</div>

<div class="row">
	<div class="medium-4 columns">
		<div id="playlist" class="panel" style="height: 600px; overflow-y: scroll">
			<%= render 'playlist' %>
		</div>
	</div>
	<div class="medium-8 columns">

		<div id="searchbar" class="row">
			<div class="small-12 columns">
				<%= search_form_for @query, url: playlist_management_search_path(channel_playlist: @channel_playlist.id), method: :get, remote: true do |f| %>
					<div class="row collapse">
						<div class="medium-10 columns">
							<%= f.text_field :title_or_subtitle_cont, :placeholder => "Verzeichnis durchsuchen", :id => "search-input-field" %>
						</div>
						<div class="medium-2 columns hide-for-small">
							<%= f.submit "Search", :class => "prefix button" %>
						</div>
					</div>
					<div class="row">
						<%= f.check_box :cached_true %>
						<%= f.label :cached_true %>
					</div>
				<% end %>
			</div>
		</div>

		<div id="results"><%= render 'results' %></div>

	</div>
</div>