<div class="row">
	<div class="medium-12 columns">
		<h1>Playlist Management</h1>
	</div>
</div>

<div class="row">
	<div class="medium-4 columns playlist">
		<div id="playlist" style="background: #eee; height: 600px; overflow-y: scroll">
		<% @playlist_entries.each do |entry| %>
			<div><%= entry.episode.title %></div>
		<% end %>
		</div>
		<div class="button" style="width:100%">Apply</div>
	</div>
	<div class="medium-8 columns">
        <ul class="small-block-grid-3 large-block-grid-3">
        <% @episodes.each do |episode| %>
          <li>
                <img src="<%= episode.icon_url %>">
                <h5><%= episode.title %></h5>
                <p><%= first_x_words(episode.subtitle) %></p>
                <div class="button small success add-episode" id="<%= episode.id %>">Add</div>
          </li>
        <% end %>
        </ul>
	</div>
</div>