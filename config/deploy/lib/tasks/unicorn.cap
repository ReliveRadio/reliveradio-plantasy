namespace :unicorn do
  desc "Setup Unicorn initializer and app configuration"
  task :setup do
    on roles(:app) do
      run "mkdir -p #{shared_path}/config"
      template "unicorn.rb.erb", fetch(:unicorn_config, "#{shared_path}/config/unicorn.rb")
      template "unicorn_init.erb", "/tmp/unicorn_init"
      run "chmod +x /tmp/unicorn_init"
      run "#{sudo} mv /tmp/unicorn_init /etc/init.d/unicorn_#{full_app_name}"
      run "#{sudo} update-rc.d -f unicorn_#{full_app_name} defaults"
    end
  end
  after "deploy:started", "unicorn:setup"

  %w[start stop restart].each do |command|
    desc "#{command} unicorn"
    task command do
      on roles(:app) do
        run "service unicorn_#{full_app_name} #{command}"
      end
    end
  end
  after "deploy:restart", "unicorn:restart"
end