check process unicorn_<%= fetch(:full_app_name) %>
    with pidfile <%= fetch(:unicorn_pid) %>
    start program = "/etc/init.d/unicorn_<%= fetch(:full_app_name) %> start"
    stop program = "/etc/init.d/unicorn_<%= fetch(:full_app_name) %> stop"
    if mem is greater than 175.0 MB for 1 cycles then restart
    if cpu is greater than 22% for 2 cycles then alert         
    if cpu is greater than 25% for 1 cycles then restart